package baitapcuoichuong;

import java.util.ArrayList;
import java.util.Scanner;

public class bai1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		ArrayList<Integer> abc = new ArrayList<>();
		System.out.println("Nhập vào số lươngj phần tử:");
		int n = sc.nextInt();
		for(int i=0;i<n;i++) {
			System.out.printf("nhập vào phần tử thứ %d:",i+1);
			int GT=sc.nextInt();
			abc.add(GT);
		}
		HienThi(abc);
		findMax(abc);
	}
	public static void findMax(ArrayList<Integer> a) {
		a.sort((o1,o2)->o1-o2);
		System.out.printf("Giá trị lớn nhất là:",a.get(a.size()-1));
	}
	public static void HienThi(ArrayList<Integer> a) {
		for(int number : a)
			System.out.println(number);
	}
	}