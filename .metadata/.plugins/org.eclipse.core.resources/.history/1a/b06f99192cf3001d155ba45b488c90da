package baitapcuoichuong;
import java.util.ArrayList;
import java.util.Scanner;
public class bai1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		ArrayList<Integer> abc = new ArrayList<>();
		System.out.println("Nhập vào số lượng phần tử:");
		int n = sc.nextInt();
		for(int i=0;i<n;i++) {
			System.out.printf("nhập vào phần tử thứ %d:",i+1);
			int GT=sc.nextInt();
			abc.add(GT);
		}
		HienThi(abc);
		int f=1;
		while(f==1) {
			System.out.println("\n1.Tìm số nguyên có giá trị lớn nhất");
			System.out.println("2.Xóa 1 giá trị trong dãy ");
			System.out.println("3.Sắp xếp dãy");
			int luachon;
			do {
				System.out.println("Nhập vào lựa chọn");
				luachon=sc.nextInt();
			}while((luachon<0)||luachon>3);
		switch(luachon){
		case 1 :findMax(abc);
		break;
		case 2 : XoaGiaTri(abc);
		break;
		case 3 : sapxep(abc);
		break;
		}
	}
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	public static void findMax(ArrayList<Integer> a) {
		a.sort((o1,o2)->o1-o2);
		System.out.print("\nGiá trị lớn nhất là:"+a.get(a.size()-1));
	}
	public static void HienThi(ArrayList<Integer> a) {
		for(int i= 0;i<a.size();i++)
			System.out.print(a.get(i)+"\t");
	}
	public static void XoaGiaTri(ArrayList<Integer> a) {
	    Scanner sc = new Scanner(System.in);
	    System.out.println("\nNhập vào 1 số nguyên:");
	    int r = sc.nextInt();
	    boolean g = false;
	    while (a.contains(r)) {
	        int i = a.indexOf(r);
	        a.remove(i);
	        if (!g) {
	            System.out.printf("Đã xóa %d khỏi dãy\n", r);
	            g = true;
	        }
	        HienThi(a);
	    }
	    if (!g) {
	        System.out.printf("Không có %d trong dãy\n", r);
	    }
	}
	public static void sapxep(ArrayList<Integer> a) {
		System.out.println("sắp xếp tăng dần :");
		a.sort((o1,o2)->o1-o2);
		HienThi(a);
		System.out.println("\nsắp xếp giảm dần:");
		a.sort((o1,o2)->o2-o1);
		HienThi(a);
	}
	}