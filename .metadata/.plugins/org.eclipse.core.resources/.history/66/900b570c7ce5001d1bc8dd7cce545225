package ngay2804;

import java.util.ArrayList;
import java.util.Scanner;

public class slide22 {
	 public static void main(String[] args) {
			ArrayList<Integer> arrList=new ArrayList<>();
			Scanner sc =new Scanner(System.in);
			int c;
			System.out.print("Nhap vao so luong phan tu :");
			int a=sc.nextInt();
			for(int i=0;i<a;i++) {
				System.out.printf("nhap vao gia tri cua phan tu %d ",i );
				c=sc.nextInt();
				arrList.add(c);
			}
			int max,min;
			max=min=arrList.get(0);
			for(int i=1;i<arrList.size();i++) {
				if(arrList.get(i)<min) {
					min=arrList.get(i);
				}
				if(arrList.get(i)>max) {
					max=arrList.get(i);}
			}
					System.out.print("gia tri lon nhat la: "+max+" gia tri nho nhat la:"+min);
				}
}
