package Sets;

import java.util.Collection;
import java.util.HashSet;
import java.util.Scanner;
import java.util.Set;


public class Student {
public String FullName;
public int Age;
public void NhapThongTin() {
	Scanner sc = new Scanner(System.in);
	System.out.println("Nhập tên sinh viên:");
	FullName= sc.nextLine();
	System.out.println("Nhập vào tuổi sinh viên:");
	Age = sc.nextInt();
}
public static void HienThi(Set<Student>stdList) {
	for(int i=0;i<stdList.size();i++) {
		System.out.printf("Sinh viên: %s,%d tuổi\n",stdList);
	}
}
public static void ThemMoi(HashSet<Student> stdList) {
	Scanner sc = new Scanner(System.in);
	System.out.println("Nhập vào số sinh viên cần thêm:");
	int n= sc.nextInt();
	for(int i=0;i<n;i++) {
		Student std = new Student();
		std.NhapThongTin();
		stdList.add(std);
		System.out.println("Thành công");
	}
}
public static void Update(Set<Student> stdList) {
	Scanner sc = new Scanner(System.in);
	System.out.println("Nhập họ tên cần sửa:");
	String ten = sc.nextLine();
	if(stdList.contains(ten)) {
			Student std = new Student();
			std.NhapThongTin();
			stdList.iterator();
			System.out.println(" Thay Đổi Thành công");
		}
	
}
public static void Delete (Set<Student>stdList) {
	Scanner sc = new Scanner(System.in);
	System.out.println("Nhập tên sinh viên cần xóa");
	String ten=sc.nextLine();
		if(stdList.contains(ten)) {
			stdList.remove(ten);
			System.out.println(" Xóa Thành công");
		}
	}
	}




