package baitapcuoichuong;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.Iterator;
import java.util.List;
import java.util.Scanner;

public class bai4 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		HashSet<String> Fruit = new HashSet<>();
		List<String> fruit = new ArrayList<>();
		fruit.add("dứa");
		fruit.add("táo");
		fruit.add("khế");
		int a =1;
		int luachon;
		while(a==1) {
			System.out.println("\n1.Thêm hoa quả vào hashset ");
			System.out.println("2.Hiển thị hashSet");
			System.out.println("3.Tìm kiếm ");
			System.out.println("4.Xóa 1 loại");
			System.out.println("5.Thêm từ 1 hashset khác vào hashset ban đầu ");
			System.out.println("6.Xóa các phần từ khác thuộc hashset thứ 2");
			do {
			System.out.println("Nhập vào lựa chọn:");
			 luachon=sc.nextInt();
			}while((luachon<0)||(luachon>6));
			switch(luachon) {
			case 1:TheFruit(Fruit);
			break;
			case 2: HienThi(Fruit);
			break;
			case 3: TimKiem(Fruit);
			break;
			case 4: Delete(Fruit);
			break;
			case 5:Fruit.addAll(fruit);
			System.out.println("các phần tử có trong hashset là:");
			Iterator<String> iterator = Fruit.iterator();
			while(iterator.hasNext()) {
				System.out.println(iterator.next());}
			break;
			case 6:Fruit.removeAll(fruit);
				HienThi(Fruit);
				break;
			}
		}
	}

	public static void TheFruit(HashSet<String> a) {
		Scanner sc = new Scanner(System.in);
		String HoaQua;
		String Stop = "stop";
		do {
			System.out.println("Nhập vào tên hoa quả,nhập stop để dừng:");
			HoaQua = sc.nextLine();
			if ((!HoaQua.isEmpty()) && (!HoaQua.equalsIgnoreCase(Stop))) {
				a.add(HoaQua);
			}
		} while (!HoaQua.equals(Stop));
	}
	public static void HienThi(HashSet<String> ar) {
		System.out.println("Danh sách hoa quả là:");
		for (String a : ar) {
			System.out.println(a + "\t");
		}
	}

	public static void TimKiem(HashSet<String> arr) {
		Scanner sc = new Scanner(System.in);
		System.out.println("\nnhập vào loại hoa quả cần tim:");
		String ten = sc.nextLine();
		boolean a = false;
		for (String abc : arr) {
			if (abc.equals(ten)) {
				System.out.println("\nĐã tìm thấy");
				a = true;
				break;
			}
		}
		if (!a)
			System.out.println("Không tìm thấy");
	}

	public static void Delete(HashSet<String> arr) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Nhập tên hoa quả muốn xóa:");
		String temp = sc.nextLine();
		boolean c = false;
		for (String a : arr) {
			if (a.contains(temp)) {
				arr.remove(a);
				System.out.println("Xóa thành công");
				c = true;
				break;
			}
		}
		if (!c)
			System.out.printf("Không tìm thấy %s trong danh sách\n", temp);
		HienThi(arr);

	}
}
