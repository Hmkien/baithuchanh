package baitapcuoichuong;

import java.util.List;
import java.util.Scanner;

public class SinhVien {
	public String Ten;
	float Diem;
	public void Nhap() {
		Scanner sc = new Scanner( System.in);
		System.out.println("Nhập vào tên sinh viên");
		Ten=sc.nextLine();
		System.out.println("Nhập vào điểm ");
		Diem=sc.nextFloat();
	}
	public static void ThemSinhVien(List<SinhVien> sv)
	{	 boolean a = true;
			while(a==true) {
			SinhVien newSv= new SinhVien();
			newSv.Nhap();
			if(newSv!=null) {
			sv.add(newSv);}
			if(newSv==null)
				break;
			}
			return;
			}
			
	public static void HienThi(List<SinhVien> sv) {
		for(int i=0;i<sv.size();i++) {
			System.out.printf("Sinh viên: %s %0.2f điểm",sv.get(i).Ten,sv.get(i).Diem);
		}
	}
}
