package baitapcuoichuong;

import java.util.List;
import java.util.Scanner;

public class SinhVien {
	public String Ten;
	float Diem;
	public static void ThemSinhVien(List<SinhVien> sv)
	{	
		Scanner sc =new Scanner(System.in);
		String name;
		do {
			System.out.println("Nhập vào tên sinh viên");
			name = sc.nextLine();

			if (!name.isEmpty()) {
				System.out.println("Nhập vào điểm ");
            float score = sc.nextFloat();sc.nextLine();
            SinhVien student = new SinhVien();
            student.Diem=score;
            student.Ten=name;
            sv.add(student);
        }
    } while (!name.isEmpty());
	}
	public static void HienThi(List<SinhVien> sv) {
		for(int i=0;i<sv.size();i++) {
			System.out.printf("Sinh viên: %s %f điểm",sv.get(i).Ten,sv.get(i).Diem);
		}
	}
}
