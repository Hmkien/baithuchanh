package baitapcuoichuong;
import java.util.Map;
import java.util.Scanner;

public class SinhVien5 {
	public String MaSV;
	public String HoTen;
	public String Lop;

	public SinhVien5(String MaSV, String HoTen, String Lop) {
		this.MaSV = MaSV;
		this.HoTen = HoTen;
		this.Lop = Lop;
	}

	public void setMaSV(String MaSV) {
		this.MaSV = MaSV;
	}

	public String getMaSV() {
		return MaSV;
	}

	public void setHoTen(String HoTen) {
		this.HoTen = HoTen;
	}

	public String getHoTen() {
		return HoTen;
	}

	public void setLop(String Lop) {
		this.Lop = Lop;
	}

	public String getLop() {
		return Lop;
	}

	public static void Add(Map<String, SinhVien5> abc) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("Nhap so luong sinh vien: ");
		int n = scanner.nextInt();
		for (int i = 0; i<n; i++) {
			System.out.println("Nhap thong tin sinh vien thu " + (i + 1));
			System.out.print("Ma sinh vien: ");
			String maSV = scanner.next();
			System.out.print("Ho ten: ");
			String hoTen = scanner.next();
			System.out.print("Lop: ");
			String lop = scanner.next();

			SinhVien5 sinhVien = new SinhVien5(maSV, hoTen, lop);
			abc.put(maSV, sinhVien);
		}
	}

	public static void show(Map<String, SinhVien5> lkm) {
		System.out.println("Danh sach sinh vien:");
		for (SinhVien5 sinhVien : lkm.values()) {
			System.out
					.println("Sinhvien " + sinhVien.HoTen + " - " + sinhVien.MaSV + " - " + "Lá»›p" + sinhVien.getLop());
		}
	}
}
