package baitapcuoichuong;
import java.util.ArrayList;
import java.util.Scanner;

public class bai1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		ArrayList<Integer> abc = new ArrayList<>();
		System.out.println("Nhập vào số lượng phần tử:");
		int n = sc.nextInt();
		for(int i=0;i<n;i++) {
			System.out.printf("nhập vào phần tử thứ %d:",i+1);
			int GT=sc.nextInt();
			abc.add(GT);
		}
		HienThi(abc);
		findMax(abc);
		XoaGiaTri(abc);
		HienThi(abc);
	}
	public static void findMax(ArrayList<Integer> a) {
		a.sort((o1,o2)->o1-o2);
		System.out.print("Giá trị lớn nhất là:"+a.get(a.size()-1));
	}
	public static void HienThi(ArrayList<Integer> a) {
		for(int number : a)
			System.out.println(number);
	}
	public static void XoaGiaTri(ArrayList<Integer> a) {
		Scanner sc =new Scanner(System.in);
		System.out.println("Nhập vào 1 số nguyên:");
		int r=sc.nextInt();
		boolean g= false;
		for(int i = 0; i<a.size();i++) {
			if(a.get(i).equals(r)) {
				a.remove(i);
			g= true;}
			if(!g)
				System.out.printf("Không có %d trong dãy",r);
		}
		
		
	}
}