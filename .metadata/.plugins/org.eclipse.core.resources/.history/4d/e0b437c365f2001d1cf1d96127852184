package baitapcuoichuong;

import java.util.LinkedList;
import java.util.Scanner;

public class bai2 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		LinkedList<Integer> LKlist= new LinkedList<>();
		int n ;
		do {
		System.out.println("Nhập vào số lượng:");
		 n = sc.nextInt();
		}while(n<=0);
		for(int i=0;i<n;i++) {
			int b ;
			do{System.out.printf("Nhập vào phần tử thứ %d:",i+1);
			 b=sc.nextInt();
			}while(n<0);
			LKlist.add(b);
		}
		for(int number : LKlist) {
			System.out.print(number+"\t");
		}
		TinhTrungBinhCong(LKlist);
		
	}
	public static void TinhTrungBinhCong(LinkedList<Integer> arr) {
		int dem=0;
		int sum = 0;
		for(int i=0;i<arr.size();i++) {
			if(arr.get(i)%2==0) {
			sum+=arr.get(i);
			dem++;
			}
		}
		System.out.println("trung bình cộng của các số chẵn là "+sum/dem);
	}

}
