package baitapcuoichuong;

import java.util.LinkedList;
import java.util.Scanner;

public class Bai3 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		LinkedList<SinhVien> SVLisr = new LinkedList<>();
		int a = 1;
		while (a == 1) {
			System.out.println("\n1.Thêm sinh viên");
			System.out.println("2.Đếm và hiển thị sinh viên thi lại");
			System.out.println("3.Hiển thị");
			System.out.println("4.Hiển thị các sinh viên điểm lớn nhất");
			System.out.println("5.Tìm kiếm sinh viên");
			int Luachon;
			do {
			System.out.println("\nNhập vào lựa chọn của bạn:");
			Luachon = sc.nextInt();
			}while((Luachon<0)||(Luachon>5));
			switch (Luachon) {
			case 1:
				SinhVien.ThemSinhVien(SVLisr);
				break;
			case 2:
				SinhVien.DemSinhVien(SVLisr);
				break;
			case 3:
				SinhVien.HienThi(SVLisr);
				break;
			case 4:
				SinhVien.maxcore(SVLisr);
				break;
			case 5:
				SinhVien.TimKiem(SVLisr);
			}
		}
	}
}
